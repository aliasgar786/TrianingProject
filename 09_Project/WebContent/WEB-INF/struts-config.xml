<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="IssueNewBookForm" type="com.montran.form.IssueNewBook"/>
		<form-bean name="DeleteForm" type="com.montran.form.DeleteBookForm"/>
		<form-bean name="UpdateForm" type="com.montran.form.UpdateForm"/>
	</form-beans>
		
	<action-mappings>
		<action path="/bookDetails" type="com.montran.action.BookListAction" 
		>
		<forward name="success" path="/BookIssueDetails.jsp"></forward>
		</action>
		
		<action path="/issueBook" type="com.montran.action.IssueBookAction"
		 name="IssueNewBookForm" validate="true" input="/IssueBook.jsp">
		 <forward name="member" path="/IssueBook.jsp"></forward>
		 <forward name="book" path="/IssueBook.jsp"></forward>
		<forward name="success" path="/bookDetails.do"></forward>
		</action>

		<action path="/deleteBook" type="com.montran.action.DeleteBook" 
		name="DeleteForm">
		<forward name="success" path="/bookDetails.do"></forward>
		</action>
		
		<action path="/updateBook" type="com.montran.action.UpdateBookAction" 
		name="UpdateForm">
		<forward name="success" path="/bookDetails.do"></forward>
		</action>
	</action-mappings>
	<message-resources parameter="messages" />
</struts-config>